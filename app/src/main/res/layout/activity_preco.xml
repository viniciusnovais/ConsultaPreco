                        <!--android:layout_height="wrap_content"-->
                        <!--android:text=" LT"-->
                        <!--android:textAppearance="@style/TextAppearance.Large" />-->

                <!--</LinearLayout>-->
            </LinearLayout>

            <EditText
                android:id="@+id/editPrecob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_editext_preco"
                android:digits=",0123456789"
                android:gravity="start"
                android:hint="@string/cifrao"
                android:inputType="numberDecimal"
                android:textAppearance="@style/TextAppearance.Small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/opcoes"
                android:textAppearance="@style/TextAppearance.Small" />

            <RadioGroup
                android:id="@+id/groupOpcoesB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oferta"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/ruptura"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/fifo"
                    android:textAppearance="@style/TextAppearance.Small" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>