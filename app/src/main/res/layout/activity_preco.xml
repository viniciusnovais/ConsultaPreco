<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_filter_list_black_24dp" />

    <LinearLayout
        android:id="@+id/llFiltros"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSecao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/border_spinner"
                android:gravity="start|center"
                android:hint="@string/secao"
                android:textAppearance="@style/TextAppearance.Small" />

            <TextView
                android:id="@+id/tvSubSecao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=".2"
                android:background="@drawable/border_spinner"
                android:gravity="start|center"
                android:hint="@string/sub_secao"
                android:textAppearance="@style/TextAppearance.Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/border_spinner"
                android:gravity="start|center"
                android:hint="@string/tipo"
                android:textAppearance="@style/TextAppearance.Small" />

            <TextView
                android:id="@+id/tvSubTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=".2"
                android:background="@drawable/border_spinner"
                android:gravity="start|center"
                android:hint="@string/sub_tipo"
                android:textAppearance="@style/TextAppearance.Small" />

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <!--<TextView-->
                <!--android:id="@+id/tvProduto"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight=".1"-->
                <!--android:background="@drawable/border_spinner"-->
                <!--android:gravity="start|center"-->
                <!--android:hint="@string/produto"-->
                <!--android:textAppearance="@style/TextAppearance.Small" />-->

        <!--</LinearLayout>-->

    </LinearLayout>

    <Button
        android:id="@+id/btFeito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="@string/feito"
        android:textAppearance="@style/TextAppearance.Small"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/linearLayoutVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:id="@+id/tvEan"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight=".2"-->
                <!--android:background="@drawable/border_editext_preco"-->
                <!--android:maxLines="1"-->
                <!--android:text="@string/eanv"-->
                <!--android:textAppearance="@style/TextAppearance.Small" />-->

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/border_editext_preco"
                android:maxLines="1"
                android:text="@string/descv"
                android:textAppearance="@style/TextAppearance.Small" />

            <TextView
                android:id="@+id/tvMarca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/border_editext_preco"
                android:maxLines="1"
                android:text="@string/marcav"
                android:textAppearance="@style/TextAppearance.Small" />

            <!--<TextView-->
                <!--android:id="@+id/tvUnidMedida"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight=".2"-->
                <!--android:background="@drawable/border_editext_preco"-->
                <!--android:maxLines="1"-->
                <!--android:text="@string/unid_medidav"-->
                <!--android:textAppearance="@style/TextAppearance.Small" />-->


            <TextView
                android:id="@+id/editPreco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/border_editext_preco"
                android:maxLines="1"
                android:text="@string/preco"
                android:textAppearance="@style/TextAppearance.Small" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewVertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/arrowLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:elevation="5dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_36dp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:orientation="vertical">

            <pdasolucoes.com.br.consultapreco.Util.CustomRecyclerView
                android:id="@+id/customRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </pdasolucoes.com.br.consultapreco.Util.CustomRecyclerView>

        </LinearLayout>

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutBusca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/editCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:hint="@string/busque_produto"
            android:imeOptions="actionNext"
            android:textAppearance="@style/TextAppearance.Small" />


        <LinearLayout
            android:id="@+id/linearLayoutRespostaBusca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/linearLayoutDetalhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
